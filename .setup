#!/bin/sh
# This file will install Cygwin packages, similar to .brew

pc=(
  wget                  # PolarSSL
  git                   # RtmpDump
  make                  # RtmpDump
  mingw64-i686-gcc-core # RtmpDump
  openssh               # git push
  msmtp                 # git send-email
)
IFS=, read <<< "${pc[*]}"

# Run non-quiet so we can customize if necessary.
# Installer does not recognize \cygwin.

setup -n \
  -P $REPLY \
  -l $HOMEDRIVE/cygwin/usr/local/bin \
  -s ftp://lug.mtu.edu/cygwin
