#!/bin/sh
# Functions; need to export so that scripts can use them

clear(){
    printf '\ec'
}

notepad(){
  cygpath -m "$1" | xargs notepad
}

export -f clear notepad

bootstrap(){
  cd ~/dotfiles
  # ~
  git ls-files -ix ".*" | xargs cp -t ~
  # firefox
  cp -r firefox/. "$APPDATA"/*/*/Profiles/*
  # notepad2
  cp -r notepad2/. "$APPDATA"/Notepad2
  # Hide dotfiles
  # attrib /d /s +h ".*"
  . ~/.bash_profile
}
